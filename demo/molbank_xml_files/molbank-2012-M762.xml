        <kwd>Schiff base</kwd>
        <kwd>mesomorphic</kwd>
        <kwd>3-hydroxy-4-[(phenylimino)methyl]phenyl 4-(hexadecanoyloxy)benzoate</kwd>
      </kwd-group>
